<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>searchFilter</filter-name>
        <filter-class>com.wavemaker.tutorial.searchContext.filter.SearchFilter</filter-class>
    </filter>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.wavemaker.tutorial.searchContext.filter.LoginFilter</filter-class>
    </filter>


    <filter>
        <filter-name>signUpFilter</filter-name>
        <filter-class>com.wavemaker.tutorial.searchContext.filter.SignUpFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>searchFilter</filter-name>
        <url-pattern>/search.html</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login.html</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>signUpFilter</filter-name>
        <url-pattern>/signUp.html</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>signUpServlet</servlet-name>
        <servlet-class>com.wavemaker.tutorial.searchContext.servlet.SignUpServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.wavemaker.tutorial.searchContext.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.wavemaker.tutorial.searchContext.servlet.LogoutServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>wordSearch</servlet-name>
        <servlet-class>com.wavemaker.tutorial.searchContext.servlet.TextEditor</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>com.wavemaker.tutorial.searchContext.servlet.Dispatcher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signUpServlet</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>wordSearch</servlet-name>
        <url-pattern>/TextEditor</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/dispatcher</url-pattern>
    </servlet-mapping>


</web-app>