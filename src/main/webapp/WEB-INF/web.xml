<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <welcome-file-list>
        <welcome-file>/main.html</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>searchFilter</filter-name>
        <filter-class>SearchFilter</filter-class>
    </filter>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>LoginFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>searchFilter</filter-name>
        <url-pattern>/search.html</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login.html</url-pattern>
    </filter-mapping>



    <servlet>
        <servlet-name>signUp</servlet-name>
        <servlet-class>SignUp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>wordSearch</servlet-name>
        <servlet-class>TextEditor</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>signUp</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>wordSearch</servlet-name>
        <url-pattern>/TextEditor</url-pattern>
    </servlet-mapping>


</web-app>